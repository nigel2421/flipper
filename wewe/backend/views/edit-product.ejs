<!-- views/edit-product.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Product</title>
    <link rel="stylesheet" href="/css/admin-style.css">
</head>
<body>
    <div class="container">
        <h1>Edit Product</h1>
        <form action="/admin/edit/<%= product.id %>?_method=PUT" method="POST" class="product-form">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input type="text" id="name" name="name" value="<%= product.name %>" required>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                 <select id="category" name="category" required>
                    <option value="Fencing" <%= product.category === 'Fencing' ? 'selected' : '' %>>Fencing</option>
                    <option value="Quartz" <%= product.category === 'Quartz' ? 'selected' : '' %>>Quartz</option>
                    <option value="Marble" <%= product.category === 'Marble' ? 'selected' : '' %>>Marble</option>
                    <option value="Service" <%= product.category === 'Service' ? 'selected' : '' %>>Service</option>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="4" required><%= product.description %></textarea>
            </div>
             <div class="form-group">
                <label for="details">Details (e.g., Mesh Size, Dimensions)</label>
                <input type="text" id="details" name="details" value="<%= product.details %>">
            </div>
            <div class="form-group price-group">
                <div>
                    <label for="price">Price (Ksh)</label>
                    <input type="number" id="price" name="price" value="<%= product.price %>" required>
                </div>
                <div>
                    <label for="priceUnit">Price Unit</label>
                    <input type="text" id="priceUnit" name="priceUnit" value="<%= product.priceUnit %>" required>
                </div>
            </div>
            <div class="form-group">
                <label for="imageUrl">Image URL</label>
                <input type="text" id="imageUrl" name="imageUrl" value="<%= product.imageUrl %>">
            </div>
            <a href="/admin" class="btn">Cancel</a>
            <button type="submit" class="btn btn-success">Update Product</button>
        </form>
    </div>
</body>
</html>