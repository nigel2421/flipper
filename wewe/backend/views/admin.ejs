<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin-style.css">
</head>
<body>
    <div class="container">
        <h1>Product Dashboard</h1>
        <a href="/admin/add" class="btn btn-success">Add New Product</a>
        <table class="product-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.category %></td>
                        <td>Ksh. <%= product.price %> / <%= product.priceUnit %></td>
                        <td>
                            <a href="/admin/edit/<%= product.id %>" class="btn btn-primary">Edit</a>
                            <form action="/admin/delete/<%= product.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>